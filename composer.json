{
  "name": "umber/authentication",
  "description": "A simple authentication module.",
  "type": "library",
  "license": "MIT",

  "authors": [
    { "name": "Matthew Rose", "email": "matt.usurp@gmail.com" }
  ],

  "require": {
    "php": ">=7.1",

    "umber/common": "~0.1",
    "umber/database": "~0.1",

    "lcobucci/jwt": "~3.2"
  },

  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "symfony/security": "~3.4 | ~4.0"
  },

  "autoload": {
    "psr-4": {
      "Umber\\Authentication\\": "src/Umber/Authentication",
      "Umber\\Authentication\\Tests\\": "tests/Umber/Authentication/Tests"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-develop": "0.1-dev"
    }
  },

  "archive": {
    "exclude": [
      "!vendor",
      "*phpunit.xml",
      ".travis.yml"
    ]
  }
}
