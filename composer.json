{
  "name": "umber/authentication",
  "description": "A simplified authentication with implementations for Symfony",
  "type": "library",
  "license": "MIT",

  "authors": [
    { "name": "Matthew Rose", "email": "matt.usurp@gmail.com" }
  ],

  "require": {
    "php": ">=7.1",

    "umber/common": "~0.1",

    "lcobucci/jwt": "~3.2"
  },

  "require-dev": {
    "symfony/security": "~3.4 | ~4.0"
  },

  "autoload": {
    "psr-4": {
      "Umber\\Authentication\\": "."
    },
    "exclude-from-classmap": [
      "Tests"
    ]
  },

  "extra": {
    "branch-alias": {
      "dev-develop": "0.1-dev"
    }
  },

  "archive": {
    "exclude": [
      "!vendor",
      "*phpunit.xml",
      ".travis.yml"
    ]
  }
}
